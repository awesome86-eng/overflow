<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#79C72B"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="247dp"
        android:layout_height="243dp"
        android:layout_marginTop="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/overflow_basket_white" />

    <EditText
        android:id="@+id/EmailEntryBox"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_marginTop="56dp"
        android:background="@android:drawable/edit_text"
        android:ems="10"
        android:hint="Enter your Email Address"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/logo"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="@+id/logo"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <EditText
        android:id="@+id/PasswordEntryBox"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:background="@android:drawable/edit_text"
        android:ems="10"
        android:hint="Enter your Password"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/EmailEntryBox"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/EmailEntryBox"
        app:layout_constraintTop_toBottomOf="@+id/EmailEntryBox" />

    <Button
        android:id="@+id/LoginBtn"
        android:layout_width="290dp"
        android:layout_height="45dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#E5E5E5"
        android:text="Log in"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/PasswordEntryBox"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/PasswordEntryBox"
        app:layout_constraintTop_toBottomOf="@+id/ForgotPassword" />

    <CheckBox
        android:id="@+id/RememberMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="#FFFFFF"
        android:text="Remember me"
        android:textColorHighlight="#E5E5E5"
        android:textColorLink="#E5E5E5"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/PasswordEntryBox"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/PasswordEntryBox"
        app:layout_constraintTop_toBottomOf="@+id/PasswordEntryBox" />

    <TextView
        android:id="@+id/ForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Forgot password?"
        android:textColor="#0067C7"
        app:layout_constraintEnd_toEndOf="@+id/PasswordEntryBox"
        app:layout_constraintTop_toBottomOf="@+id/PasswordEntryBox" />

    <TextView
        android:id="@+id/SignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Sign up"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/LoginBtn"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/LoginBtn"
        app:layout_constraintTop_toBottomOf="@+id/LoginBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>